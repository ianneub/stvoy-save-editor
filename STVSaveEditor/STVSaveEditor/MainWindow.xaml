<Window x:Class="STVSaveEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:STVSaveEditor.ViewModels"
        Title="STV: Across the Unknown â€” Save Editor"
        Width="800" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#FF1B1B2F">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <!-- Converters -->
        <vm:FilePathToNameConverter x:Key="FileNameConverter"/>

        <!-- Cards -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D44"/>
            <Setter Property="BorderBrush" Value="#FF4A4A6A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- Section Headers -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE0C070"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4,12,4,6"/>
        </Style>

        <!-- Labels -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCDD"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Value TextBoxes with focus indicator + monospace font -->
        <Style x:Key="ValueBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF1B1B2F"/>
            <Setter Property="Foreground" Value="#FFEEEEFF"/>
            <Setter Property="CaretBrush" Value="#FFEEEEFF"/>
            <Setter Property="BorderBrush" Value="#FF4A4A6A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF5A9FD4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox dark theme -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF1B1B2F"/>
            <Setter Property="Foreground" Value="#FFEEEEFF"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FF2D2D44"/>
            <Setter Property="Foreground" Value="#FFEEEEFF"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#FF3A6EA5"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Buttons with hover/pressed states -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#FF3A6EA5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF4A8ECF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF2A5E85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FF3A3A5A"/>
                                <Setter Property="Foreground" Value="#FF888899"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark-themed ScrollBar -->
        <Style x:Key="DarkScrollThumb" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#FF4A4A6A" CornerRadius="4" Margin="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="10"/>
            <Setter Property="MinWidth" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="#FF1B1B2F" CornerRadius="4"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource DarkScrollThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hull ProgressBar -->
        <Style TargetType="ProgressBar">
            <Setter Property="Background" Value="#FF1B1B2F"/>
            <Setter Property="Foreground" Value="#FF4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <Grid>
                                <Border x:Name="PART_Track"/>
                                <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}"
                                        CornerRadius="3" HorizontalAlignment="Left"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Branding Header -->
        <StackPanel Grid.Row="0" Margin="4,0,4,4">
            <TextBlock FontSize="18" FontWeight="Bold" Foreground="#FFE0C070"
                       FontFamily="Consolas"
                       Text="STV: ACROSS THE UNKNOWN"/>
            <TextBlock Text="Save Game Editor" FontSize="11" Foreground="#FF8888AA" Margin="2,-2,0,8"/>
            <Border Height="2" Margin="0,0,0,4">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FFE0C070" Offset="0"/>
                        <GradientStop Color="#FF3A6EA5" Offset="0.5"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </StackPanel>

        <!-- File Selection Bar -->
        <Border Style="{StaticResource CardBorder}" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Save File:" Style="{StaticResource LabelText}" Margin="0,0,8,0"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding SaveFiles}"
                          SelectedItem="{Binding SelectedFile}"
                          ToolTip="{Binding SelectedFile}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource FileNameConverter}}"
                                       ToolTip="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Grid.Column="2" Content="Browse..."
                        Style="{StaticResource ActionButton}"
                        Margin="8,0,0,0"
                        Click="BrowseButton_Click"/>
            </Grid>
        </Border>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,8,0,8">
            <StackPanel>
                <!-- Hull Integrity with visual bar -->
                <TextBlock Text="Hull Integrity" Style="{StaticResource SectionHeader}"/>
                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Current HP" Style="{StaticResource LabelText}" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1" Style="{StaticResource ValueBox}"
                                     HorizontalAlignment="Left"
                                     Text="{Binding HullIntegrity, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Column="3" Text="Max HP" Style="{StaticResource LabelText}" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="4" Style="{StaticResource ValueBox}"
                                     Text="{Binding HullMax, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        <ProgressBar Value="{Binding HullIntegrity}" Maximum="{Binding HullMax}"
                                     Height="6" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Base Resources with modified indicator -->
                <TextBlock Text="Base Resources" Style="{StaticResource SectionHeader}"/>
                <ItemsControl ItemsSource="{Binding BaseResources}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="220">
                                <Border.Style>
                                    <Style BasedOn="{StaticResource CardBorder}" TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsModified}" Value="True">
                                                <Setter Property="BorderBrush" Value="#FFE0C070"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding DisplayName}" Style="{StaticResource LabelText}"/>
                                    <TextBox Grid.Column="1" Style="{StaticResource ValueBox}"
                                             Text="{Binding NewQuantity, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Items with modified indicator -->
                <TextBlock Text="Items" Style="{StaticResource SectionHeader}"/>
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="280">
                                <Border.Style>
                                    <Style BasedOn="{StaticResource CardBorder}" TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsModified}" Value="True">
                                                <Setter Property="BorderBrush" Value="#FFE0C070"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding DisplayName}" Style="{StaticResource LabelText}"/>
                                    <TextBox Grid.Column="1" Style="{StaticResource ValueBox}"
                                             Text="{Binding NewQuantity, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Bar with color-coded status -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Save Changes" Style="{StaticResource ActionButton}"
                    Command="{Binding SaveCommand}" Margin="0,0,8,0"/>
            <Button Grid.Column="1" Content="Reload" Style="{StaticResource ActionButton}"
                    Command="{Binding ReloadCommand}" Background="#FF555577"/>
            <TextBlock Grid.Column="2" Text="{Binding StatusMessage}"
                       Foreground="{Binding StatusBrush}"
                       FontSize="12" VerticalAlignment="Center"
                       HorizontalAlignment="Right" Margin="8,0,0,0"/>
        </Grid>
    </Grid>
</Window>
